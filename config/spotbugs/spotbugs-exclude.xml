<?xml version="1.0" encoding="UTF-8"?>
<FindBugsFilter>

    <!-- Suppress CRLF_INJECTION_LOGS warnings globally -->
    <Match>
        <Bug pattern="CRLF_INJECTION_LOGS"/>
    </Match>

    <!-- Suppress SPRING_ENDPOINT warnings globally -->
    <Match>
        <Bug pattern="SPRING_ENDPOINT"/>
    </Match>

    <!-- Suppress SpringEntityLeakDetector warnings for UserController -->
    <Match>
        <Class name="com.example.retailplatform.user.adapter.in.web.UserController"/>
        <Bug pattern="SPRING_ENTITY_LEAK"/>
    </Match>

    <!-- Suppress inner class not static warning -->
    <Match>
        <Bug pattern="SIC_INNER_SHOULD_BE_STATIC_ANON"/>
    </Match>

    <!-- Suppress EQ_DOESNT_OVERRIDE_EQUALS warnings for DTOs -->
    <Match>
        <Bug pattern="EQ_DOESNT_OVERRIDE_EQUALS"/>
    </Match>

    <!-- Suppress EI_EXPOSE_REP / EI_EXPOSE_REP2 warnings for ErrorResponse -->
    <Match>
        <Class name="com.example.retailplatform.user.common.ErrorResponse"/>
        <Bug pattern="EI_EXPOSE_REP"/>
    </Match>
    <Match>
        <Class name="com.example.retailplatform.user.common.ErrorResponse"/>
        <Bug pattern="EI_EXPOSE_REP2"/>
    </Match>

</FindBugsFilter>
