<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- ===========================================
         Hardcoded log path and service name
    ============================================ -->
    <property name="LOG_DIR" value="/app/logs"/>
    <property name="SERVICE_NAME" value="user-service"/>

    <!-- ===========================================
         Console Appender
    ============================================ -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- ===========================================
         JSON File Appender with immediate flush
    ============================================ -->
    <appender name="JSON_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_DIR}/${SERVICE_NAME}-combined.log</file>
        <immediateFlush>true</immediateFlush>

        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_DIR}/${SERVICE_NAME}-combined-%d{yyyy-MM-dd}-%i.log.gz</fileNamePattern>
            <maxHistory>10</maxHistory>
            <maxFileSize>50MB</maxFileSize>
        </rollingPolicy>

        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <customFields>{"service":"${SERVICE_NAME}"}</customFields>
            <includeMdc>true</includeMdc>
        </encoder>
    </appender>

    <!-- ===========================================
         Application logger
    ============================================ -->
    <logger name="com.example.retailplatform" level="INFO" additivity="false">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="JSON_FILE"/>
    </logger>

    <!-- ===========================================
         Root logger
    ============================================ -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="JSON_FILE"/>
    </root>

</configuration>
