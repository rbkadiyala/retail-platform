<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">

    <Appenders>
        <!-- Console Appender for all logs -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>

        <!-- Rolling File Appender for application logs (JSON) -->
        <RollingFile name="AppFile" fileName="logs/app.log"
                     filePattern="logs/app-%d{yyyy-MM-dd}.log.gz">
            <JsonLayout compact="true" eventEol="true"
                        includeStacktrace="true"
                        includeTimeMillis="true"/>
            <Policies>
                <TimeBasedTriggeringPolicy/>
                <SizeBasedTriggeringPolicy size="10 MB"/>
            </Policies>
        </RollingFile>

        <!-- Rolling File Appender for HTTP logs (JSON) -->
        <RollingFile name="HttpFile" fileName="logs/http.log"
                     filePattern="logs/http-%d{yyyy-MM-dd}.log.gz">
            <JsonLayout compact="true" eventEol="true"
                        includeStacktrace="true"
                        includeTimeMillis="true"/>
            <Policies>
                <TimeBasedTriggeringPolicy/>
                <SizeBasedTriggeringPolicy size="10 MB"/>
            </Policies>
        </RollingFile>
    </Appenders>

    <Loggers>
        <!-- Application logs -->
        <Logger name="com.example.retailplatform" level="DEBUG" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="AppFile"/>
        </Logger>

        <!-- HTTP logs -->
        <Logger name="HTTP_LOG" level="INFO" additivity="false">
            <AppenderRef ref="HttpFile"/>
        </Logger>

        <!-- Root logger -->
        <Root level="INFO">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="AppFile"/>
        </Root>
    </Loggers>
</Configuration>
