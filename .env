# ===============================
# User Service
# ===============================
USER_SERVICE_NAME=user-service
USER_SERVICE_PORT=9083
USER_SERVICE_URL=http://${USER_SERVICE_NAME}:${USER_SERVICE_PORT}
USER_SERVICE_DOCKERFILE=user-service/Dockerfile
USER_SERVICE_LOG_PATH=/app/logs
USER_SERVICE_LOGS=./user-logs
USER_SERVICE_HEALTHCHECK_INTERVAL=10s
USER_SERVICE_HEALTHCHECK_TIMEOUT=5s
USER_SERVICE_HEALTHCHECK_RETRIES=10

# ===============================
# JWT Service
# ===============================
JWT_SERVICE_NAME=jwt-service
JWT_SERVICE_PORT=9081
JWT_SERVICE_DOCKERFILE=jwt-service/Dockerfile
JWT_SERVICE_LOG_PATH=/app/logs
JWT_SERVICE_LOGS=./jwt-logs
JWT_SERVICE_HEALTHCHECK_INTERVAL=10s
JWT_SERVICE_HEALTHCHECK_TIMEOUT=5s
JWT_SERVICE_HEALTHCHECK_RETRIES=10

# ===============================
# Redis
# ===============================
REDIS_SERVICE_NAME=redis
REDIS_PORT=6379
REDIS_HEALTHCHECK_INTERVAL=5s
REDIS_HEALTHCHECK_TIMEOUT=3s
REDIS_HEALTHCHECK_RETRIES=5

# ===============================
# User DB (Postgres)
# ===============================
USER_DB_SERVICE_NAME=user-db
USER_DB_NAME=user_db
USER_DB_USER=user_user
USER_DB_PASSWORD=user_pass
USER_DB_PORT=5432
USER_DB_URL=jdbc:postgresql://${USER_DB_SERVICE_NAME}:${USER_DB_PORT}/${USER_DB_NAME}

# ===============================
# Admin (Bootstrap User)
# ===============================
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123
ADMIN_EMAIL=admin@example.com

# ===============================
# Maven Repository Volume
# ===============================
MAVEN_REPO_VOLUME=maven-repo

# ===============================
# JPA / Hibernate (common for services)
# ===============================
SPRING_JPA_HIBERNATE_DDL_AUTO=update
SPRING_JPA_SHOW_SQL=true
SPRING_PROFILES_ACTIVE=docker

# ===============================
# OpenAPI / Swagger
# ===============================
SPRINGDOC_API_DOCS_PATH=/v3/api-docs
SPRINGDOC_SWAGGER_UI_PATH=/swagger-ui.html

# ===============================
# Actuator / Metrics
# ===============================
MANAGEMENT_ENDPOINTS=health,info,prometheus,metrics
MANAGEMENT_HEALTH_SHOW_DETAILS=always
MANAGEMENT_PROMETHEUS_ACCESS=unrestricted
MANAGEMENT_METRICS_ENABLED=true
# Reduce actuator log noise
LOG_LEVEL_ORG_SPRINGFRAMEWORK_BOOT_ACTUATOR=INFO

# ===============================
# Observability / OpenTelemetry
# ===============================
OBSERVABILITY_CORRELATION_ID_HEADER=X-Correlation-ID
OTEL_RESOURCE_ATTRIBUTES=service.name=user-service,service.version=1.0.0
OTEL_METRICS_EXPORTER=prometheus
OTEL_TRACES_EXPORTER=otlp
OTEL_COLLECTOR_ENDPOINT=http://otel-collector:4317

# ===============================
# User Service Logging (Reduced)
# ===============================
USER_SERVICE_LOG_LEVEL_ROOT=WARN
USER_SERVICE_LOG_LEVEL_SPRING=WARN
USER_SERVICE_LOG_LEVEL_SPRING_SECURITY=INFO
USER_SERVICE_LOG_LEVEL_SPRING_SECURITY_WEB=INFO
USER_SERVICE_LOG_LEVEL_FILTER_CHAIN=INFO
USER_SERVICE_LOG_LEVEL_AUTHENTICATION=INFO
USER_SERVICE_LOG_LEVEL_APP=DEBUG
USER_SERVICE_LOG_PATTERN_CONSOLE=%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n

# ===============================
# JWT Service Logging (Reduced)
# ===============================
JWT_SERVICE_LOG_LEVEL_ROOT=WARN
JWT_SERVICE_LOG_LEVEL_SPRING=WARN
JWT_SERVICE_LOG_LEVEL_SPRING_SECURITY=INFO
JWT_SERVICE_LOG_LEVEL_SPRING_SECURITY_WEB=INFO
JWT_SERVICE_LOG_LEVEL_FILTER_CHAIN=INFO
JWT_SERVICE_LOG_LEVEL_AUTHENTICATION=INFO
JWT_SERVICE_LOG_LEVEL_APP=DEBUG
JWT_SERVICE_LOG_PATTERN_CONSOLE=%d{yyyy-MM-dd HH:mm:ss} [%thread] %-5level %logger{36} - %msg%n
