    {
      "type": "timeseries",
      "title": "ðŸ“ˆ Total Logs Over Time",
      "gridPos": {"x": 0, "y": 10, "w": 12, "h": 8},
      "id": 2,
      "datasource": {
        "type": "loki",
        "uid": "af0wcjukz7mdcc"
      },
      "targets": [
        {
          "expr": "count_over_time({job=\"user-service\"}[$__interval])",
          "refId": "A"
        }
      ]
    },
    {
      "type": "timeseries",
      "title": "ðŸ”„ Incoming vs Outgoing Logs",
      "gridPos": {"x": 12, "y": 10, "w": 12, "h": 8},
      "id": 3,
      "datasource": {
        "type": "loki",
        "uid": "af0wcjukz7mdcc"
      },
      "targets": [
        {
          "expr": "count_over_time({job=\"user-service\", direction=\"incoming\"}[$__interval])",
          "refId": "A",
          "legendFormat": "Incoming"
        },
        {
          "expr": "count_over_time({job=\"user-service\", direction=\"outgoing\"}[$__interval])",
          "refId": "B",
          "legendFormat": "Outgoing"
        }
      ]
