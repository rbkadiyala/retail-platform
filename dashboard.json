      "datasource": {
        "type": "loki",
        "uid": "af0wcjukz7mdcc"
      },
      "targets": [
        {
          "expr": "sum by (status) (count_over_time({job=\"user-service\"}[$__interval]))",
          "refId": "A"
        }
      ],
      "options": {
        "orientation": "horizontal",
        "displayMode": "lcd"
      }
    },
    {
      "type": "table",
      "title": "ðŸ“Š Top URIs (Incoming)",
      "gridPos": {"x": 12, "y": 18, "w": 12, "h": 8},
      "id": 5,
      "datasource": {
        "type": "loki",
        "uid": "af0wcjukz7mdcc"
      },
      "targets": [
        {
          "expr": "sum by (uri) (count_over_time({job=\"user-service\", direction=\"incoming\"}[$__interval]))",
          "refId": "A"
        }
      ]
    },
    {
      "type": "logs",
      "title": "ðŸš¨ Error Logs (status != 200)",
      "gridPos": {"x": 0, "y": 26, "w": 24, "h": 10},
      "id": 6,
      "datasource": {
        "type": "loki",
        "uid": "af0wcjukz7mdcc"
      },
      "targets": [
        {
          "expr": "{job=\"user-service\"} |~ `\"status\"` != \"200\"",
          "refId": "A"
        }
      ],
      "options": {
        "showLabels": true,
        "showTime": true,
        "wrapLogMessage": true
      }
    }
  ],
  "time": {
    "from": "now-15m",
    "to": "now"
  }
}
