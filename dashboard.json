  "title": "User Service Logs Dashboard",
  "tags": ["logs", "loki", "user-service"],
  "timezone": "browser",
  "schemaVersion": 37,
  "version": 1,
  "refresh": "10s",
  "panels": [
    {
      "type": "logs",
      "title": "ðŸ”¹ Live User Service Logs",
      "gridPos": {"x": 0, "y": 0, "w": 24, "h": 10},
      "id": 1,
      "datasource": {
        "type": "loki",
        "uid": "af0wcjukz7mdcc"
      },
      "targets": [
        {
          "expr": "{job=\"user-service\"}",
          "refId": "A"
        }
      ],
      "options": {
        "showLabels": true,
        "showTime": true,
        "wrapLogMessage": true,
        "sortOrder": "Descending"
